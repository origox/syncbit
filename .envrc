# Fitbit OAuth2 credentials
# Get these from https://dev.fitbit.com/apps
export FITBIT_CLIENT_ID=$(op.exe read "op://kubernetes/syncbit/FITBIT_CLIENT_ID")
export FITBIT_CLIENT_SECRET=$(op.exe read "op://kubernetes/syncbit/FITBIT_CLIENT_SECRET")
export FITBIT_REDIRECT_URI=http://localhost:8080/callback

# Victoria Metrics credentials
export VICTORIA_ENDPOINT=$(op.exe read "op://kubernetes/victoria-metrics/ENDPOINT")
export VICTORIA_USER=$(op.exe read "op://kubernetes/victoria-metrics/USER")
export VICTORIA_PASSWORD=$(op.exe read "op://kubernetes/victoria-metrics/PASSWORD")

# Application settings
export SYNC_INTERVAL_MINUTES=15
export DATA_DIR=$(pwd)/data
export BACKFILL_START_DATE=2025-06-01
export FITBIT_USER_ID=default
export LOG_LEVEL=INFO

# Github
export GH_TOKEN=$(op read "op://kubernetes/github/PAT_SYNCBIT")